CREATE TABLE IF NOT EXISTS "Members" ("id"   SERIAL , "email" VARCHAR(255) UNIQUE, "unsubscribed" BOOLEAN NOT NULL DEFAULT false, "sendTime" INTEGER NOT NULL, "nextEmailDate" TIMESTAMP WITH TIME ZONE, "createdAt" TIMESTAMP WITH TIME ZONE NOT NULL, "updatedAt" TIMESTAMP WITH TIME ZONE NOT NULL, PRIMARY KEY ("id"));
CREATE TABLE IF NOT EXISTS "LoginCodes" ("id"   SERIAL , "code" VARCHAR(32) UNIQUE, "expires" TIMESTAMP WITH TIME ZONE, "createdAt" TIMESTAMP WITH TIME ZONE NOT NULL, "updatedAt" TIMESTAMP WITH TIME ZONE NOT NULL, "MemberId" INTEGER REFERENCES "Members" ("id") ON DELETE SET NULL ON UPDATE CASCADE, PRIMARY KEY ("id"));
CREATE TABLE IF NOT EXISTS "Tokens" ("id"   SERIAL , "token" VARCHAR(32) UNIQUE, "createdAt" TIMESTAMP WITH TIME ZONE NOT NULL, "updatedAt" TIMESTAMP WITH TIME ZONE NOT NULL, "MemberId" INTEGER REFERENCES "Members" ("id") ON DELETE SET NULL ON UPDATE CASCADE, PRIMARY KEY ("id"));
CREATE TABLE IF NOT EXISTS "Posts" ("id"   SERIAL , "text" TEXT, "date" TIMESTAMP WITH TIME ZONE, "token" VARCHAR(32), "createdAt" TIMESTAMP WITH TIME ZONE NOT NULL, "updatedAt" TIMESTAMP WITH TIME ZONE NOT NULL, "MemberId" INTEGER REFERENCES "Members" ("id") ON DELETE SET NULL ON UPDATE CASCADE, PRIMARY KEY ("id"));
CREATE TABLE IF NOT EXISTS "Attachments" ("id" SERIAL, "url" VARCHAR(256), "type" VARCHAR(32), "PostId" INTEGER REFERENCES "Posts" ("id") ON DELETE SET NULL ON UPDATE CASCADE, PRIMARY KEY ("id"));
CREATE INDEX attachment_postid ON "Attachments" ("PostId");
